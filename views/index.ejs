<% include ./components/header.ejs %>

<div class="w-full h-[88.5vh] bg-[url(https://images.unsplash.com/photo-1524169358666-79f22534bc6e?q=80&w=1470&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D)] flex items-center justify-center">
  <div class="w-96 h-[68vh] bg-white px-14 py-5  rounded-3xl">
    <div class="flex justify-center items-center mb-6">
      <img
      src="https://i.pinimg.com/originals/d3/d1/75/d3d175e560ae133f1ed5cd4ec173751a.png"
      alt="pin logo"
      class="h-12 w-12"
    />
    </div>
    <h1 class="text-3xl font-semibold text-zinc-700 tracking-tighter text-center leading-none mb-8">Welcome To Pinterest</h1>
    <form class="relative" action="/login" method="post">
      <label class="text-zinc-600 text-base" for="username">Username</label>
      <input
        name="username"
        type="text"
        placeholder="User Name"
        class="mb-2 border-2 rounded-lg block border-zinc-300 w-full px-3 py-2"
      />
      
      <label class="text-zinc-600 text-base" for="password">Password</label>
      <input
        name="password"
        id="password"
        type="password"
        placeholder="Password"
        class="mb-2 block border-2 border-zinc-300 rounded-lg w-full px-3 py-2"
      />
      <button onclick="togglePassword()" class="text-zinc-700 cursor-pointer absolute right-2 top-28">
        <span id="abc">

          <i class="ri-eye-fill"></i>
        </span>
    </button>
      <a class="font-semibold  text-zinc-500 inline-block my-2" href="/forgot">Forgot your password?</a>

      <input class="block border-2 mt-2 w-full px-3 py-2 mb-3 bg-[#E70022] text-white font-semibold rounded-full " type="submit" value="Log in" class="btn int" />

      <a href="/register" class=""><p class="text-zinc-700  text-center">Not on Pinterest yet? <b> Sign Up</b> </p></a>
    </form>
  </div>
</div>


<script>
  const pass = document.getElementById('abc');
  pass.addEventListener('click', togglePassword)
  function togglePassword(e) {
    e.preventDefault()
      const passwordInput = document.getElementById('password');
      passwordInput.type = (passwordInput.type === 'password') ? 'text' : 'password';
      pass.innerHTML = (passwordInput.type === 'password') ? '<i class="ri-eye-fill"></i>' : '<i class="ri-eye-off-fill"></i>'
  }

</script>
